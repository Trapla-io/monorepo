<section class="single-page">
  <div class="page-container">
    <h1 style="text-align: center; width: 60%; margin: auto;">{{ data.title }}</h1>
    <p class="text-dark" style="text-align: center;">{{ data.customerName }}</p>
    <div class="cover-img" style="background-image: url({{ data.cover_image.src }}); margin: 50px 0;"></div>
    <p class="text-dark" style="text-align: center;">{{ data.startDate }} - {{ data.endDate }}</p>
  </div>
</section>

{{#if data.items.show_summary}}
<section class="single-page">
  <div class="page-header">
    {{ data.title }}
  </div>
  <div class="page-container">
    <h1 style="margin-top: 50px;">SOMMAIRE</h1>
    <div style="height: 20px; display: flex;">
      <div style="width: 30%; height: 20px; background-color: {{theme.primary}}; border-radius: 20px 0 0 20px;"></div>
      <div style="width: 70%; height: 20px; background-color: {{theme.secondary}};"></div>
    </div>
    <div style="margin-top: 7%;">
      {{#each data.summary}}
      <div style="display: flex; align-items: center; margin-bottom: 15px;">
        <div class="summary-circle">{{index}}</div>
        <h2 style="margin-left: 10px;">{{title}}</h2>
      </div>
      {{/each}}
    </div>
  </div>
</section>
{{/if}}