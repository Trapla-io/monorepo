<section class="single-page">
      <div class="page-header">
        {{ data.coverTitle }}
      </div>
      <div class="page-container">
        <div class="cover-img" style="background-image: url({{ data.cover_image.src }}); margin: 50px 0;"></div>
        <h1>{{data.title}}</h1>
      </div>
    </section>

    <section>
      <div class="page-header">
        {{ data.coverTitle }}
      </div>
      <div class="page-container">
        {{#each data.accommodations}}
          <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-top: 5%; page-break-after: {{ pageBreak }};">
            <img src="{{ image.src }}" style="width: 200px; height: auto; border-radius: 10px;">
            <div style="width: 500px;">
              <h2 style="margin-bottom: 10px; color: {{../theme.primary}};">{{ title }}</h2>
              <div style="font-weight: bold;">{{ price }}â‚¬  |  {{arrival_date}} - {{departure_date}}</div>
              <div style="padding-top: 20px;">
                {{{ injectHTML description }}}
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </section>